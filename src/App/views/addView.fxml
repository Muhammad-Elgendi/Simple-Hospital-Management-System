<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="content" minHeight="345" minWidth="680" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.controllers.addController">
    <top>
        <VBox alignment="center" spacing="30">
            <GridPane alignment="center" hgap="30" vgap="30">

                <Label text="First name :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <JFXTextField fx:id="textFirstName" GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER" />

                <Label text="Last name :" textFill="white" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <JFXTextField fx:id="textLastName" GridPane.columnIndex="3" GridPane.rowIndex="0" alignment="CENTER"/>

                <Label text="Age :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <JFXTextField fx:id="textAge" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER" />

                <Label text="Disease :" textFill="white" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <JFXTextField fx:id="textDisease" GridPane.columnIndex="3" GridPane.rowIndex="1" alignment="CENTER" />

                <Label text="Room :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <JFXTextField fx:id="textRoom" GridPane.columnIndex="1" GridPane.rowIndex="2" alignment="CENTER" />

                <Label text="Doctor :" textFill="white" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <JFXTextField fx:id="textDoctor" GridPane.columnIndex="3" GridPane.rowIndex="2" alignment="CENTER" />

            </GridPane>

            <JFXButton fx:id="addbtn" graphicTextGap="10.0" onAction="#add" styleClass="addbtn" text="Add" textAlignment="CENTER">
                <graphic>
                    <FontAwesomeIconView fill="white" glyphName="PLUS_CIRCLE" size="30.0" strokeType="OUTSIDE" textAlignment="CENTER" />
                </graphic>
            <font>
               <Font size="25.0" />
            </font>
            </JFXButton>

        </VBox>
    </top>
</BorderPane>
