<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="content" minHeight="345" minWidth="680" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="App.controllers.editController" stylesheets="@styles/styles.css">
    <center>

            <VBox spacing="30" alignment="CENTER">
                <GridPane alignment="CENTER" hgap="30">
                <Label text="ID :" GridPane.columnIndex="0" GridPane.rowIndex="0" textFill="white"  />
                <JFXTextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="textId" alignment="CENTER"/>
                </GridPane>

                <JFXButton fx:id="searchbtn" text="View" graphicTextGap="10.0" onAction="#viewToEdit" styleClass="searchbtn" textAlignment="CENTER" alignment="center">
                    <graphic>
                        <FontAwesomeIconView fill="white" glyphName="SEARCH" size="30.0" strokeType="OUTSIDE" textAlignment="CENTER" />
                    </graphic>
                </JFXButton>
            </VBox>

    </center>
</BorderPane>
